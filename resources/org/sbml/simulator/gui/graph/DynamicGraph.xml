<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
  <comment>
	   This configuration describes the names of buttons and menu
	   items in base graphical user interfaces. To change the configuration
	   note that the key is the same as the enum type in BaseFrame.BaseAction
	   and the given value consists of the actual short name and - separated
	   by a semicolon ";" the corresponding tool tip.
  </comment>
  
  <!-- DynamicControlPanel -->
  
  <entry key="PLAY">Play</entry>
  <entry key="PLAY_TOOLTIP">Start the dynamic visualization.</entry>
  <entry key="PAUSE">Pause</entry>
  <entry key="PAUSE_TOOLTIP">Pause the dynamic visualization.</entry>
  <entry key="STOP">Stop</entry>
  <entry key="STOP_TOOLTIP">Stop the dynamic visualization.</entry>
  <entry key="TOVIDEO">Video</entry>
  <entry key="TOVIDEO_TOOLTIP">Save the dynamic visualization as a video.</entry>
  <entry key="NODELABELS">Nodelabels</entry>
  <entry key="REACTIONLABELS">Reactionlabels</entry>
  <entry key="FAST">Fast</entry>
  <entry key="NORMAL">Normal</entry>
  <entry key="SLOW">Slow</entry>
  <entry key="FALSE_INPUT">Input not a positive integer.</entry>
  <entry key="TIMEPOINT">Timepoint</entry>
  <entry key="SIMULATIONSPEED">Simulationspeed</entry>
  <entry key="NODESIZE">Node size</entry>
  <entry key="NODECOLOR">Node color</entry>
  <entry key="MANIPULATORCHOOSER">Visualization</entry>  
  
  <!-- GraphOptions TODO: move-->

  <entry key="GraphOptions">Network</entry>
  <entry key="MIN_NODE_SIZE">Minimum node size</entry>
  <entry key="MIN_NODE_SIZE_TOOLTIP">In case of dynamic change of node size, this determines the minimum node size.</entry>
  <entry key="MAX_NODE_SIZE">Maximum node size</entry>
  <entry key="MAX_NODE_SIZE_TOOLTIP">In case of dynamic change of node size, this determines the maximum node size.</entry>
  <entry key="NODESIZE_GROUP">Dynamic change of node size</entry>
  <entry key="NODESIZE_GROUP_TOOLTIP">Options for the dynamic change of node size.</entry>
  <entry key="NODECOLOR_GROUP">Dynamic change of node color</entry>
  <entry key="NODECOLOR_GROUP_TOOLTIP">Options for the dynamic change of node color.</entry>
  <entry key="REACTION_GROUP">Reactions</entry>
  <entry key="REACTION_GROUP_TOOLTIP">Options for the dynamic change of reactions.</entry>
  <entry key="COLOR1">High concentration</entry>
  <entry key="COLOR1_TOOLTIP">In case of dynamic change of node color, this determines the color for high concentration.</entry>
  <entry key="COLOR2">Low concentration</entry>
  <entry key="COLOR2_TOOLTIP">In case of dynamic change of node color, this determines the color for low concentration.</entry>
  <entry key="MIN_LINE_WIDTH">Minimum line width</entry>
  <entry key="MIN_LINE_WIDTH_TOOLTIP">Determines the minimum line width of dynamic reaction visualization.</entry> 
  <entry key="MAX_LINE_WIDTH">Maximum line width</entry>
  <entry key="MAX_LINE_WIDTH_TOOLTIP">Determines the maximum line width of dynamic reaction visualization.</entry>
  <entry key="SHOW_NODE_LABELS">Node labels</entry>
  <entry key="SHOW_NODE_LABELS_TOOLTIP">Enables/Disables node labels.</entry>
  <entry key="SHOW_REACTION_LABELS">Reaction labels</entry>
  <entry key="SHOW_REACTION_LABELS_TOOLTIP">Enables/Disables reaction labels.</entry>
  <entry key="GRAPH_LABELS">Labeling</entry>
  <entry key="GRAPH_LABELS_TOOLTIP">Enables/Disables labels.</entry>
  <entry key="COLOR_NODE_SIZE">Constant node size</entry>
  <entry key="COLOR_NODE_SIZE_TOOLTIP">Determines the constant node size in case of dynamic change of node color.</entry>
  
</properties>
